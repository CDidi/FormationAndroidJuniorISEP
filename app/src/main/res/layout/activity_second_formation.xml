<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="android.junior.formation.fr.formationjuniorisep.SecondFormation">

    <EditText
        android:id="@+id/second_formation_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/second_formation_edit_hint"
        android:gravity="center"/>

    <Button
        android:id="@+id/second_formation_button_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/second_formation_edit"
        android:text="@string/second_formation_button_add"/>

    <ListView
        android:id="@+id/second_formation_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_formation_button_add"/>

</RelativeLayout>
